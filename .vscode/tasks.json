{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe compilar archivo activo",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"${fileDirname}\\*.cpp",
				"-o",
				"${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",
				"-I",
				"{workspaceFolder}\\include"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\MinGW\\bin\\g++.exe"
		}
	]
}